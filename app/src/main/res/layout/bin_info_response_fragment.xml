<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--android:visibility="gone"-->
        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="visible">


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:columnCount="2">

                <!--android:layout_columnSpan="2"-->
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/card_scheme"
                    />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/card_type"
                    />

                <!--android:textIsSelectable="true"-->
                <TextView
                    android:id="@+id/text_view_card_scheme"
                    android:tag="text_view_card_scheme"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:maxWidth="150dp"
                    tools:text="Visa"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_view_card_type"
                    android:tag="text_view_card_type"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:maxWidth="150dp"
                    android:textIsSelectable="true"
                    tools:text="Debit / Credit"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/card_brand"
                    />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/is_card_prepaid"
                    />

                <TextView
                    android:id="@+id/text_view_card_brand"
                    android:tag="text_view_card_brand"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:maxWidth="150dp"
                    android:textIsSelectable="true"
                    tools:text="Visa/Dankort"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_view_is_card_prepaid"
                    android:tag="text_view_is_card_prepaid"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:maxWidth="150dp"
                    android:textIsSelectable="true"
                    tools:text="YES / NO"
                    android:textStyle="bold"/>

            </GridLayout>

        </ScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>


